<local:ModuleBaseDlg x:Class="BrainSimulator.Modules.ModuleUKSDlg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BrainSimulator.Modules"
        mc:Ignorable="d"
        Title="Universal Knowledge Store (UKS)" Height="450" Width="800" Background="Gray" ShowInTaskbar="False" Loaded="Dlg_Loaded">
    <Grid >
        <TreeView x:Name="theTreeView" FontSize="16"
                  SizeChanged="TheTreeView_SizeChanged" 
                  Background="LightGray" Foreground="Black" Margin="0,68,0,-3" 
                  MouseEnter="TheTreeView_MouseEnter" 
                  MouseLeave="TheTreeView_MouseLeave"
                  PreviewMouseWheel="theTreeView_MouseWheel"
                  >
        </TreeView>
        <CheckBox x:Name="detailsCB" Content="Show Details" HorizontalAlignment="Left" Margin="131,10,0,0" Width="120" Checked="CheckBoxDetails_Checked" Unchecked="CheckBoxDetails_Unchecked" FontSize="16" Height="19" VerticalAlignment="Top"/>
        <CheckBox x:Name="checkBoxAuto" IsChecked="True" Content="Auto-Refresh" HorizontalAlignment="Left" Margin="131,39,0,0" Width="120" Checked="CheckBoxAuto_Checked" Unchecked="CheckBoxAuto_Unchecked" FontSize="16" Height="19" VerticalAlignment="Top"/>
        <CheckBox x:Name="reverseCB" IsChecked="False" Content="Reverse Rels." HorizontalAlignment="Left" Margin="256,10,0,0" Width="161" Checked="CheckBoxAuto_Checked" Unchecked="CheckBoxAuto_Unchecked" FontSize="16" RenderTransformOrigin="1.073,-0.658" Height="19" VerticalAlignment="Top"/>
        <CheckBox x:Name="showConditionals" IsChecked="False" Content="Show Conditionals" HorizontalAlignment="Left" Margin="256,39,0,0" Width="161" Checked="CheckBoxAuto_Checked" Unchecked="CheckBoxAuto_Unchecked" FontSize="16" RenderTransformOrigin="1.073,-0.658" Height="19" VerticalAlignment="Top"/>

        <Label Content="Root:" HorizontalAlignment="Left" Margin="424,4,0,0" Width="90" FontSize="16" Height="35" VerticalAlignment="Top"/>
        <TextBox x:Name="textBoxRoot" HorizontalAlignment="Left" Margin="467,8,0,0" TextWrapping="Wrap" Text="Thing" Width="250" TextChanged="textBoxRoot_TextChanged" PreviewKeyDown="TextBoxRoot_KeyDown" FontSize="16" Height="25" VerticalAlignment="Top"/>
        <Label Content="" x:Name="statusLabel"  HorizontalAlignment="Left" Margin="424,33,0,0" Width="300" FontSize="16" Height="35" VerticalAlignment="Top"/>
        <Button x:Name="InitializeButton" Content="Initialize" VerticalAlignment="Top" Height="27" Click="InitializeButton_Click" Margin="18,19,0,0" FontSize="16" HorizontalAlignment="Left" Width="108"   />
    </Grid>
</local:ModuleBaseDlg>
