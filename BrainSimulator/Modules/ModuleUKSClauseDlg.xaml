<local:ModuleBaseDlg x:Class="BrainSimulator.Modules.ModuleUKSClauseDlg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BrainSimulator.Modules"
        mc:Ignorable="d"
        Title="UKS Add Clause" Height="500" Width="530" Background="Gray" ShowInTaskbar="False" ResizeMode="NoResize" >
    <Grid Name="theGrid" Margin="0,0,0,0" >
        <Label x:Name="sourceeLabel"               Content="Source"        HorizontalAlignment="Left"   Height="33"   Margin="56,43,0,0"       FontSize="16" Width="68" VerticalAlignment="Top"/>
        <Label x:Name="relationshipTypeLabel"      Content="Type"          HorizontalAlignment="Left"   Height="33"   Margin="56,83,0,0"   FontSize="16"  Width="68" VerticalAlignment="Top" />
        <Label x:Name="targetLabel"                Content="Target"        HorizontalAlignment="Left"   Height="33"   Margin="56,123,0,0"   FontSize="16"  Width="68" VerticalAlignment="Top"/>

        <TextBox  x:Name="sourceText"               TabIndex="1"  Height="33" VerticalAlignment="Top"   FontSize="16"   Margin="124,43,156,0" TextChanged="Text_TextChanged"/>
        <TextBox  x:Name="relationshipText"         TabIndex="2"  Height="33" VerticalAlignment="Top"   FontSize="16"   Margin="124,83,156,0" TextChanged="Text_TextChanged"/>
        <TextBox  x:Name="targetText"               TabIndex="3"  Height="33" VerticalAlignment="Top"   FontSize="16"   Margin="124,123,156,0" TextChanged="Text_TextChanged" />


        <Button x:Name="BtnAddRelationship"   IsDefault="True" Content="Add/Update" Height="32" VerticalAlignment="Top" FontSize="16" Margin="124,378,0,0" Click="BtnAddRelationship_Click" HorizontalAlignment="Left" Width="158"/>

        <Label Content="Clause Type"   HorizontalAlignment="Left"   Height="33"   Margin="56,178,0,0"       FontSize="16" Width="98" VerticalAlignment="Top"/>
        <Label Content="Source"        HorizontalAlignment="Left"   Height="33"   Margin="56,248,0,0"       FontSize="16" Width="68" VerticalAlignment="Top"/>
        <Label Content="Type"          HorizontalAlignment="Left"   Height="33"   Margin="56,288,0,0"   FontSize="16"  Width="68" VerticalAlignment="Top" />
        <Label Content="Target"        HorizontalAlignment="Left"   Height="33"   Margin="56,328,0,0"   FontSize="16"  Width="68" VerticalAlignment="Top"/>

        <TextBox  x:Name="clauseTypeText"            TabIndex="4"  Height="33" VerticalAlignment="Top"   FontSize="16"    Margin="156,178,156,0" TextChanged="Text_TextChanged"/>
        <TextBox  x:Name="sourceText2"               TabIndex="5"  Height="33" VerticalAlignment="Top"   FontSize="16"   Margin="124,248,156,0" TextChanged="Text_TextChanged"/>
        <TextBox  x:Name="relationshipText2"         TabIndex="6"  Height="33" VerticalAlignment="Top"   FontSize="16"   Margin="124,288,156,0" TextChanged="Text_TextChanged"/>
        <TextBox  x:Name="targetText2"               TabIndex="7"  Height="33" VerticalAlignment="Top"   FontSize="16"   Margin="124,328,156,0" TextChanged="Text_TextChanged" />

        <Label Content="Condition" FontSize="18" HorizontalAlignment="Left" Height="31" Margin="150,212,0,0" VerticalAlignment="Top" Width="224"/>
        <Label Content="Relationship" FontSize="18" HorizontalAlignment="Left" Height="30" Margin="146,0,0,0" VerticalAlignment="Top" Width="224"/>
        <ComboBox x:Name="SourceDisambiguation" FontSize="18" Visibility="Hidden" HorizontalAlignment="Left" Margin="284,0,0,0" VerticalAlignment="Top" Width="120" Height="34" SelectionChanged="SourceDisambuation_SelectionChanged"/>
    </Grid>
</local:ModuleBaseDlg>
