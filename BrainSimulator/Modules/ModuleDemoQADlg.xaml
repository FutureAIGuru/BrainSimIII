<local:ModuleBaseDlg x:Class="BrainSimulator.Modules.ModuleDemoQADlg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BrainSimulator.Modules"
        mc:Ignorable="d"
        Title="(Work in Progress) QA Demo System"
        Background="Gray"
        Width="800" Height="500"
        MinWidth="640" MinHeight="420"
        ShowInTaskbar="False">

    <!-- Outer padding -->
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Input label -->
            <RowDefinition Height="*"/>
            <!-- Input textbox grows -->
            <RowDefinition Height="Auto"/>
            <!-- Ingest buttons + status -->
            <RowDefinition Height="Auto"/>
            <!-- Output label -->
            <RowDefinition Height="*"/>
            <!-- Query textbox grows -->
            <RowDefinition Height="Auto"/>
            <!-- Query button + status -->
        </Grid.RowDefinitions>

        <!-- INPUT: label -->
        <Label x:Name="inputLbl"
               Grid.Row="0"
               FontSize="16"
               HorizontalAlignment="Stretch"
               HorizontalContentAlignment="Center"
               Content="Input Natural Language Sentences Directly or From a File to ChatGPT:"/>

        <!-- INPUT: textbox (stretches with window) -->
        <TextBox x:Name="inputTextBox"
                 Grid.Row="1"
                 Margin="0,8,0,0"
                 HorizontalAlignment="Stretch"
                 VerticalAlignment="Stretch"
                 VerticalContentAlignment="Top"
                 AcceptsReturn="True"
                 TextWrapping="Wrap"
                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                 MinHeight="100"/>

        <!-- INPUT: actions + status in a 3-column grid -->
        <Grid Grid.Row="2" Margin="0,12,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <!-- Button A -->
                <ColumnDefinition Width="8"/>
                <!-- Gap -->
                <ColumnDefinition Width="Auto"/>
                <!-- Button B -->
                <ColumnDefinition Width="16"/>
                <!-- Gap -->
                <ColumnDefinition Width="*"/>
                <!-- Status expands -->
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                    Content="A) Ingest Text -> UKS"
                    Click="Button_Click"
                    FontSize="16"
                    Padding="12,8"
                    MinWidth="180"
                    HorizontalAlignment="Left"/>

            <Button Grid.Column="2"
                    Content="B) Ingest File -> UKS"
                    Click="Button_Click"
                    FontSize="16"
                    Padding="12,8"
                    MinWidth="180"
                    HorizontalAlignment="Left"/>

            <TextBlock x:Name="inputOutcomeLbl"
               Grid.Column="4"
               FontSize="16"
               Text="Input Status: "
               TextWrapping="Wrap"
               VerticalAlignment="Center" Height="58"/>

        </Grid>

        <!-- QUERY: label -->
        <Label x:Name="outputLbl"
               Grid.Row="3"
               Margin="0,16,0,0"
               FontSize="16"
               HorizontalAlignment="Stretch"
               HorizontalContentAlignment="Center"
               Content="Ask a question using the UKS:"/>

        <!-- QUERY: textbox (stretches with window) -->
        <TextBox x:Name="queryTextBox"
                 Grid.Row="4"
                 Margin="0,8,0,0"
                 HorizontalAlignment="Stretch"
                 VerticalAlignment="Stretch"
                 VerticalContentAlignment="Top"
                 AcceptsReturn="True"
                 TextWrapping="Wrap"
                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                 MinHeight="100"/>

        <!-- QUERY: action + status -->
        <Grid Grid.Row="5" Margin="0,12,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <!-- Query button -->
                <ColumnDefinition Width="16"/>
                <!-- Gap -->
                <ColumnDefinition Width="*"/>
                <!-- Status expands -->
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                    Content="Query UKS"
                    Click="Button_Click"
                    FontSize="16"
                    Padding="12,8"
                    MinWidth="160"
                    HorizontalAlignment="Left"/>

            <TextBlock x:Name="queryOutcomeLbl"
                   Grid.Column="2"
                   FontSize="16"
                   VerticalAlignment="Center"
                   TextWrapping="Wrap"
                   Text="Query Status: " Height="73" />
        </Grid>
    </Grid>
</local:ModuleBaseDlg>
