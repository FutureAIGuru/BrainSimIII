<local:ModuleBaseDlg x:Class="BrainSimulator.Modules.ModuleDemoQADlg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BrainSimulator.Modules"
        mc:Ignorable="d"
        Title="(Work in Progress) QA Demo System"
        Background="Gray"
        Width="800" Height="500"
        MinWidth="640" MinHeight="420"
        ShowInTaskbar="False">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="Auto"/>
            <!-- Provider picker -->
            <RowDefinition Height="*"/>
            <!-- Transcript -->
            <RowDefinition Height="Auto"/>
            <!-- Input -->
            <RowDefinition Height="Auto"/>
            <!-- Send row -->
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Label Grid.Row="0"
               FontSize="16"
               HorizontalAlignment="Stretch"
               HorizontalContentAlignment="Center"
               Content="Chat with the QA Demo Bot"/>

        <!-- PROVIDER PICKER -->
        <Grid Grid.Row="1" Margin="0,8,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="8"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                       VerticalAlignment="Center"
                       FontWeight="SemiBold"
                       Text="Provider:"/>

            <ComboBox x:Name="providerCombo"
                      Grid.Column="2"
                      SelectionChanged="ProviderCombo_SelectionChanged"
                      ToolTip="Choose GPT (OpenAI) or Ollama (local)">
                <ComboBoxItem Content="GPT (OpenAI)"/>
                <ComboBoxItem Content="Ollama (local)"/>
            </ComboBox>

            <TextBlock x:Name="providerHint"
                       Grid.Column="4"
                       VerticalAlignment="Center"
                       Opacity="0.7"
                       Text="GPT uses OPENAI_API_KEY • Ollama uses OLLAMA_BASE_URL / OLLAMA_MODEL"/>
        </Grid>

        <!-- TRANSCRIPT -->
        <TextBox x:Name="chatTranscript"
                 Grid.Row="2"
                 Margin="0,8,0,0"
                 IsReadOnly="True"
                 AcceptsReturn="True"
                 TextWrapping="Wrap"
                 VerticalScrollBarVisibility="Auto"
                 HorizontalScrollBarVisibility="Disabled"
                 FontFamily="Consolas"
                 MinHeight="200"
                 Background="#111315"
                 Foreground="#EDEDED"
                 BorderThickness="1"
                 BorderBrush="#30343A"
                 Padding="8"
                 Text="Welcome! Ask a question to begin.&#x0a;"/>

        <!-- INPUT BOX -->
        <TextBox x:Name="chatInput"
                 Grid.Row="3"
                 Margin="0,12,0,0"
                 AcceptsReturn="True"
                 TextWrapping="Wrap"
                 VerticalScrollBarVisibility="Auto"
                 MinHeight="64"
                 ToolTip="Enter to send • Shift+Enter for newline"
                 KeyDown="ChatInput_KeyDown"/>

        <!-- SEND BUTTON + HINT -->
        <Grid Grid.Row="4" Margin="0,8,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="sendButton"
                    Grid.Column="0"
                    Content="Send"
                    Padding="16,8"
                    MinWidth="100"
                    FontSize="14"
                    Click="SendButton_Click"/>

            <TextBlock Grid.Column="2"
                       VerticalAlignment="Center"
                       Opacity="0.7"
                       Text="Tip: Press Enter to send (still working on it), Shift+Enter for a new line."/>
        </Grid>
    </Grid>
</local:ModuleBaseDlg>
