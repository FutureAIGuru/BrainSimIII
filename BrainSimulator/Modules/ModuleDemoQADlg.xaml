<local:ModuleBaseDlg x:Class="BrainSimulator.Modules.ModuleDemoQADlg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BrainSimulator.Modules"
        mc:Ignorable="d"
        Title="(Work in Progress) QA Demo System" Height="500" Width="800" Background="Gray" ShowInTaskbar="False">
    <Grid Name="theGrid" SizeChanged="TheGrid_SizeChanged">
        <Label x:Name="inputLbl" FontSize="16" Content="Input Natural Language Sentences Directly or From a File to ChatGPT:" HorizontalAlignment="Center" VerticalAlignment="Top" Width="780"/>
        <TextBox x:Name="inputTextBox" Margin="0,39,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" Height="114" Width="780"></TextBox>
        <Button Content="A) Ingest Text -> UKS" HorizontalAlignment="Right" Margin="0,158,608,0" Height="59" Width="164" Click="Button_Click" FontSize="16" VerticalAlignment="Top" />
        <Button Content="B) Ingest File -> UKS" HorizontalAlignment="Right" Margin="0,158,426,0" Height="59" Width="162" Click="Button_Click" FontSize="16" VerticalAlignment="Top" />
        <Label x:Name="outputLbl" FontSize="16" Content="Ask a question using the UKS:" Margin="0,217,0,233" HorizontalAlignment="Center" VerticalAlignment="Top" Width="780"/>
        <Label x:Name="inputOutcomeLbl" FontSize="16" Content="Input Status: " HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,158,0,0" Height="84" Width="421"/>
        <Label x:Name="queryOutcomeLbl" FontSize="16" Content="Query Status: " HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,365,10,0" Height="109" Width="411"/>
        <Button Content="Query UKS" HorizontalAlignment="Right" Margin="0,370,608,0" Height="59" Width="164" Click="Button_Click" FontSize="16" VerticalAlignment="Top" />
        <TextBox x:Name="outputTextBox" Margin="0,251,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" Height="114" Width="780"/>
    </Grid>
</local:ModuleBaseDlg>
